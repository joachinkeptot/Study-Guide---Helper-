# Supabase Configuration
# Get these from your Supabase project dashboard at https://supabase.com
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# For local development with Supabase CLI
# VITE_SUPABASE_URL=http://localhost:54321
# VITE_SUPABASE_ANON_KEY=your_local_anon_key

# Public Environment Variables (prefixed with VITE_)
# These are exposed to the client-side code
VITE_APP_NAME=Study Helper

# API Configuration (legacy - if using Flask backend)
# VITE_API_BASE_URL=http://localhost:5001

# Sentry Configuration (optional - for error monitoring in production)
# VITE_SENTRY_DSN=your_sentry_dsn_here
# VITE_SENTRY_ENABLED=false
